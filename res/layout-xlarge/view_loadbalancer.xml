<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ScrollView1" xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent">
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/view_loadbalancer_layout" android:layout_width="fill_parent" android:orientation="vertical" android:paddingLeft="5dip" android:layout_above="@+id/server_buttons_top" android:layout_alignParentTop="true" android:gravity="center">
        <TextView android:id="@+id/id_label" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="ID: " android:singleLine="false"></TextView>
        <TextView android:textSize="20.0sp" android:id="@+id/view_lb_id" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textStyle="bold" android:scrollHorizontally="true" android:textColor="#fff" android:gravity="center_horizontal"></TextView>
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Name: " android:singleLine="false" android:typeface="normal"></TextView>
        <TextView android:textSize="20.0sp" android:id="@+id/view_name" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textStyle="bold" android:scrollHorizontally="true" android:textColor="#fff" android:gravity="center_horizontal"></TextView>
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Protocol: " android:singleLine="false"></TextView>
        <TextView android:textSize="20.0sp" android:id="@+id/view_protocol" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textStyle="bold" android:scrollHorizontally="true" android:textColor="#fff" android:gravity="center_horizontal"></TextView>
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Port: " android:singleLine="false"></TextView>
        <TextView android:textSize="20.0sp" android:id="@+id/view_port" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textStyle="bold" android:scrollHorizontally="true" android:textColor="#fff" android:gravity="center_horizontal"></TextView>
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Algorithm: " android:singleLine="false"></TextView>
        <TextView android:textSize="20.0sp" android:id="@+id/view_algorithm" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textStyle="bold" android:scrollHorizontally="true" android:textColor="#fff" android:gravity="center_horizontal"></TextView>
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Status: " android:singleLine="false"></TextView>
        <TextView android:textSize="20.0sp" android:id="@+id/view_status" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textStyle="bold" android:scrollHorizontally="true" android:textColor="#fff" android:gravity="center_horizontal"></TextView>
        <TextView android:id="@+id/connection_logging" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Connection Logging: " android:singleLine="false"></TextView>
        <TextView android:textSize="20.0sp" android:id="@+id/view_islogging" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textStyle="bold" android:scrollHorizontally="true" android:textColor="#fff" android:gravity="center_horizontal"></TextView>
        <TextView android:id="@+id/TextView01" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Virtual IPs" android:singleLine="false"></TextView>
        <LinearLayout android:layout_height="wrap_content" android:id="@+id/vip_addresses" android:orientation="vertical" android:gravity="center" android:layout_width="wrap_content" android:layout_gravity="center"></LinearLayout>
        <TextView android:id="@+id/TextView02" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="Node IPs" android:singleLine="false"></TextView>
        <LinearLayout android:layout_height="wrap_content" android:id="@+id/node_addresses" android:orientation="vertical" android:layout_gravity="center_horizontal" android:gravity="center" android:layout_width="wrap_content"></LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_marginTop="10dip" android:layout_height="wrap_content" android:id="@+id/server_buttons_top" android:layout_width="fill_parent" android:paddingTop="10dip" android:orientation="horizontal" android:gravity="center" android:layout_above="@+id/server_buttons_bottom">
        <Button android:layout_height="55dip" android:layout_width="130dip" android:text="Delete Load Balancer" android:layout_marginTop="10dip" android:id="@+id/delete_loadbalancer_button" android:layout_gravity="left" android:layout_marginLeft="20dip"></Button>
        <Button android:layout_height="55dip" android:layout_width="130dip" android:text="Edit Load Balancer" android:layout_marginTop="10dip" android:id="@+id/edit_loadbalancer_button" android:layout_gravity="left" android:layout_marginLeft="20dip"></Button>
        <Button android:layout_height="55dip" android:layout_width="130dip" android:text="Edit Nodes" android:layout_marginTop="10dip" android:id="@+id/edit_nodes_button" android:layout_gravity="left" android:layout_marginLeft="20dip"></Button>
        <Button android:layout_height="55dip" android:layout_width="130dip" android:text="Log Connections" android:layout_marginTop="10dip" android:id="@+id/connection_log_button" android:layout_gravity="left" android:layout_marginLeft="20dip"></Button>
    </LinearLayout>
    <LinearLayout android:layout_marginTop="10dip" android:layout_height="wrap_content" android:id="@+id/server_buttons_bottom" android:layout_width="fill_parent" android:orientation="horizontal" android:gravity="center" android:layout_alignParentBottom="true">
        <Button android:layout_height="55dip" android:layout_width="130dip" android:text="Disable Session Persistence" android:layout_marginTop="10dip" android:id="@+id/session_persistence_button" android:layout_gravity="left" android:layout_marginLeft="20dip"></Button>
        <Button android:layout_height="55dip" android:layout_width="130dip" android:text="Connection Throttle" android:layout_marginTop="10dip" android:id="@+id/connection_throttle_button" android:layout_gravity="left" android:layout_marginLeft="20dip"></Button>
        <Button android:layout_height="55dip" android:layout_width="130dip" android:text="Access Control" android:layout_marginTop="10dip" android:id="@+id/access_control_button" android:layout_gravity="left" android:layout_marginLeft="20dip"></Button>
    </LinearLayout>
</RelativeLayout>